#! /bin/bash

# This script starts the encrypted disks, mounts any subvolumes, and then
# starts the services that depend on those encrypted disks.

cryptdisks_start enc1
cryptdisks_start enc2
cryptdisks_start enc3
cryptdisks_start enc4

mount /mnt/media
mount /var/spool/burp

systemctl start subsonic
sleep 2
#systemctl status subsonic

systemctl start burp
sleep 2
#systemctl status burp

# vim:tw=76:sts=4:sw=4
